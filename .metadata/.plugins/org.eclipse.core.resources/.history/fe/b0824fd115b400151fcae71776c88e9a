
public class BottlesFoBeer {
	
	
	public static int onTheWall(int bottles){
		if(bottles <= 99){
			System.out.println(bottles + " bottles of beer on the wall, 99 bottles of beer, ya’ take one"
 + " down, ya’ pass it around, 98 bottles of beer on the wall");
			onTheWall(bottles - 1);
		} else (bottles == 0) {
			return bottles;
		}
	}

	public static void main(String[] args) {
	onTheWall(4);
		
	}

}
